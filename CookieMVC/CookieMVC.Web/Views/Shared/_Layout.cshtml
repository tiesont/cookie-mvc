<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @AppSettings.Title
        @if (ViewBag.Title != null)
        {
            @: | @HttpUtility.HtmlDecode(ViewBag.Title)
        }
    </title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#cmvc-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="fa fa-navicon"></span>
                </button>
                <a class="navbar-brand" href="~/">
                    <i class="fa fa-desktop"></i>
                    @AppSettings.Title
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="cmvc-navbar-collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="hidden-xs hidden-sm"><a href="#">Link 1</a></li>
                        <li class="hidden-xs hidden-sm"><a href="#">Link 2</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="hidden-md hidden-lg"><a href="#">Link 1</a></li>
                                <li class="hidden-md hidden-lg"><a href="#">Link 2</a></li>
                                <li class="divider hidden-md hidden-lg"></li>
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="hidden-xs hidden-sm">
                            <a href="#">
                                <i class="fa fa-lg fa-inbox"></i>
                            </a>
                        </li>
                        <li class="hidden-xs hidden-sm">
                            <a href="@Url.Action("index", "help")">
                                <i class="fa fa-lg fa-question-circle"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="hidden-md hidden-lg"><a href="#">Message</a></li>
                                <li class="hidden-md hidden-lg"><a href="#">Help</a></li>
                                <li class="divider hidden-md hidden-lg"></li>
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="hidden-xs hidden-sm">
                            <a href="@Url.Action("index", "help")">
                                <i class="fa fa-lg fa-question-circle"></i>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("login", "account")">
                                Sign in
                                <i class="fa fa-sign-in"></i>
                            </a>
                        </li>
                    </ul>
                }
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @Html.Partial("_Alert")
        @RenderBody()
        <hr />
        <footer id="footer" class="row">
            <div class="col-xs-3">
                &copy; @DateTime.Now.Year
                <a href="@(AppSettings.CopyrightOwnerUrl)">@(AppSettings.CopyrightOwner)</a>
            </div>
            <nav class="col-xs-9 text-right">
                <ul class="footer-nav">
                    <li>
                        <a href="#">Link 1</a>
                    </li>
                    <li>
                        <a href="#">Link 2</a>
                    </li>
                </ul>
            </nav>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/bootstrap", "~/bundles/plugins")
    @RenderSection("scripts", required: false)
</body>
</html>