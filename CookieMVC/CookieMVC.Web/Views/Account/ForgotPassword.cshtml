
@{
    ViewBag.Title = "Forgot Password?";
    Layout = "~/Views/Shared/_LayoutSans.cshtml";
}

<div class="container">

    <form class="form-signin">
        <h2 class="page-header text-center">
            <i class="fa fa-desktop"></i>
            @AppSettings.Title
        </h2>
        <h3 class="form-signin-heading text-center">
            <i class="fa fa-question-circle"></i>
            Can't sign in?
        </h3>
        <p>
            Enter your registered email address below to request a password reset.
        </p>
        <p>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus />
        </p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
        <a href="@Url.Action("login", "account")" class="btn btn-link btn-block">
            <i class="fa fa-times"></i>
            Cancel
        </a>
    </form>

</div> <!-- /container -->